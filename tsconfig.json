{
	"compilerOptions": {
		"outDir": "dist",
		"declaration": true,
		"module": "commonjs",
		"target": "es5",
		"lib": ["es6", "dom"],
		"sourceMap": true,
		"allowJs": false,
		"jsx": "react",
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": false,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true,
		"baseUrl": "./src",
		"typeRoots": ["./node_modules/@types", "./src/@types"]
	},

	"esModuleInterop": true,
	"exclude": [
		"node_modules",
		"build",
		"scripts",
		"config",
		"jest",
		"src/build",
		"config"
	]
}
